<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textView3"
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:text="GESTIONAR MATERIAS"
        android:textAlignment="center"
        android:textSize="25sp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="6dp"
        tools:layout_editor_absoluteY="16dp" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layTexto"
        android:layout_width="400dp"
        android:layout_height="150dp"
        android:layout_marginTop="70dp"
        android:background="#00BCD4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <EditText
            android:id="@+id/editTextTextPersonName"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="25dp"
            android:layout_marginTop="15dp"
            android:backgroundTint="#FF9800"
            android:ems="10"
            android:hint="Codigo"
            android:inputType="textPersonName"
            android:textSize="25sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/editTextTextPersonName2"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="25dp"
            android:layout_marginTop="10dp"
            android:backgroundTint="#FF9800"
            android:ems="10"
            android:hint="Nombre de Materia"
            android:inputType="textPersonName"
            android:textSize="25sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/editTextTextPersonName" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:id="@+id/layBotonesIz"
        android:layout_width="133dp"
        android:layout_height="300dp"
        android:layout_marginEnd="5dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toStartOf="@+id/layBotonesCe"
        app:layout_constraintTop_toTopOf="@+id/layBotonesCe">

        <Button
            android:id="@+id/button15"
            android:layout_width="match_parent"
            android:layout_height="100sp"
            android:backgroundTint="#3F51B5"
            android:text="agregar"
            android:textSize="20sp" />

        <Button
            android:id="@+id/button12"
            android:layout_width="match_parent"
            android:layout_height="100sp"
            android:backgroundTint="#3F51B5"
            android:text="buscar"
            android:textSize="20sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layBotonesCe"
        android:layout_width="130dp"
        android:layout_height="300dp"
        android:layout_marginTop="250dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <Button
            android:id="@+id/button13"
            android:layout_width="match_parent"
            android:layout_height="100sp"
            android:backgroundTint="#F44336"
            android:text="eliminar"
            android:textSize="20sp" />

        <Button
            android:id="@+id/button16"
            android:layout_width="match_parent"
            android:layout_height="100sp"
            android:backgroundTint="#3F51B5"
            android:onClick="mostrar_materias"
            android:text="materias"
            android:textSize="20sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layBotonesDe"
        android:layout_width="130dp"
        android:layout_height="300dp"
        android:layout_marginStart="5dp"
        android:orientation="vertical"
        app:layout_constraintStart_toEndOf="@+id/layBotonesCe"
        app:layout_constraintTop_toTopOf="@+id/layBotonesCe">

        <Button
            android:id="@+id/button17"
            android:layout_width="match_parent"
            android:layout_height="100sp"
            android:backgroundTint="#3F51B5"
            android:text="modificar"
            android:textSize="20sp" />

        <Button
            android:id="@+id/button14"
            android:layout_width="match_parent"
            android:layout_height="100sp"
            android:backgroundTint="#3F51B5"
            android:onClick="mostrar_inicio"
            android:text="inicio"
            android:textSize="20sp" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>